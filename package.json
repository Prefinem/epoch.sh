{
	"name": "epoch.sh",
	"version": "2.0.0",
	"description": "Epoch.sh Lambda Functions",
	"repository": "https://github.com/Prefinem/epoch.sh",
	"author": "Prefinem",
	"license": "MIT",
	"husky": {
		"hooks": {
			"pre-commit": "yarn staged"
		}
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix",
			"prettier --config ./.prettierrc.json --write",
			"jest --bail --findRelatedTests",
			"git add"
		]
	},
	"scripts": {
		"clean": "yarn lint && yarn prettify",
		"eslint-check": "eslint --print-config .eslintrc.json | eslint-config-prettier-check",
		"lint": "eslint src/* --fix",
		"prettify": "prettier --config ./.prettierrc.json --write \"src/**\"",
		"staged": "lint-staged"
	},
	"devDependencies": {
		"eslint": "^5.11.1",
		"eslint-config-prettier": "^3.3.0",
		"eslint-plugin-jest": "^22.1.2",
		"eslint-plugin-react": "^7.12.1",
		"husky": "^1.3.1",
		"jest": "^23.6.0",
		"lint-staged": "^8.1.0",
		"prettier": "^1.15.3",
		"serverless": "^1.35.1",
		"serverless-content-encoding": "^1.1.0",
		"serverless-domain-manager": "^2.6.10",
		"serverless-offline": "^3.31.3",
		"serverless-plugin-log-retention": "^1.0.3",
		"serverless-prune-plugin": "^1.3.2"
	},
	"dependencies": {
		"lambdify": "4.0.0-0",
		"mustache": "^3.0.1"
	}
}
